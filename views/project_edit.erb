<h3>Your Project</h3><br>

<h3><%= @project.title %></h3>

<form action="/edit_projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="title">Rename your list:</label>
  <input name="title" type="text">
  <button type="submit" class="btn btn-info">Update Project</button>
</form>

<form action="/delete_project/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-info">Delete Project</button>
</form>

<a href="/">Home</a>
