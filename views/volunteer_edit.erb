<h3>Your Volunteer</h3><br>

<h3><%= @volunteer.name %></h3>

<form action="/update_volunteer/<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Volunteer Name</label>
  <input name="name" type="text">
  <button type="submit">Update Volunteer Name</button>
</form>

<form action="/delete_volunteer/<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Volunteer</button>
</form>

<a href="/">Back</a>
